{
    "name": "solvras/craft-video-toolkit",
    "description": "Embed videos easy in Twig",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "email": "support@solvr.no"
    },
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.5.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "solvras\\craftvideotoolkit\\": "src/"
        }
    },
    "extra": {
        "handle": "video-toolkit",
        "name": "Video Toolkit",
        "developer": "Solvr",
        "documentationUrl": "",
        "class": "solvras\\craftvideotoolkit\\VideoToolkit"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
